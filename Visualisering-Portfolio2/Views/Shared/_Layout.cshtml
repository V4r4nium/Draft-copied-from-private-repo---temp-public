        document.addEventListener("DOMContentLoaded", function () {
            var currentUrl = window.location.pathname;
            var currentLink = document.querySelector('.navbar-nav .nav-link[href="' + currentUrl + '"]');
            if (currentLink) {
                currentLink.classList.add('active');
            }
        });

    </script>

