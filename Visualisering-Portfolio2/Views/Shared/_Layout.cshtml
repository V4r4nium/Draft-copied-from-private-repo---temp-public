        .navbar-brand {
            display: inline-flex;
            align-items: center;
            position: relative;
        }

        .navbar-brand::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 100%;
            height: 2px;
            background: none; 
            transition: background-position 0.3s ease;
        }

        .navbar-brand:hover::after {
            background-position: left bottom;
        }

        .navbar-brand img {
            transition: transform 0.3s ease-in-out;
        }

        .navbar-brand:hover img {
            transform: scale(1.1);
        }

        .navbar-brand span {
            transition: color 0.3s ease, font-size 0.3s ease; 
        }

        .navbar-brand:hover span {
            color: red;
            font-size: 1.1em; 
            transform: none;
        }



