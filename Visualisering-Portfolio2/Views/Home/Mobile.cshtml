@{
    ViewData["Title"] = "Mobile Page";
}


@* backup paste *@

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/bootstrap_remover.css" rel="stylesheet" />
    <style>
        .mainBody {
            width: 100%;
            margin: 0;
        }

        .container {
            width: 100%;
        }

        .topOfPageContent {
            width: 100%;
            background-color: blueviolet;
            margin: 0 auto;
            height: auto;
            display: flex;
        }

        .middleOfPageContent {
            width: 100%;
        }

        .topSlider {
            width: 100%;
            background-color: bisque;
            flex: 1;
            padding-bottom: 5px;
            padding-left: 20px;
            padding-right: 20px;
            /* height: 860px; */
            /* width: 100%;
                    background-color: bisque;
                    margin: 0 auto;
                    display: flex;
                    flex-direction: column;
                    align-items: center; */
        }

        .carousel-inner {
            width: 100%; /* Ensure the carousel items fill the container */
        }

        .carousel-header {
            text-align: center;
        }

        #middle1 {
            background-color: cadetblue;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .middle1-1, .middle1-2 {
            flex: 1;
            padding: 20px;
        }

            .middle1-2 img {
                max-width: 100%;
                height: auto;
            }

        #middle2 {
            background-color: darkorange;
            padding: 20px;
        }

        #middle3 {
            background-color: cadetblue;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }


        .middle3-1, .middle3-2 {
            flex: 1;
            padding: 20px;
        }

            .middle3-2 img {
                max-width: 100%;
                height: auto;
            }

        #middle4 {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .middle4-1, .middle4-2 {
            max-width: 50%;
            display: flex;
            flex-direction: column;
        }

        .middle4-1-2 img,
        .middle4-2-2 img {
            max-width: 100%;
            height: auto;
            display: block;
        }

        .middle4-1-2, .middle4-2-2 {
            margin-bottom: 10px;
        }

        .middle4-1-3, .middle4-2-3 {
            max-width: 70%;
        }

    </style>
</head>
<body class="mainBody">
    <header>
        <div class="header-div">
            <h3>Mobile Page compatibility has not been implemented yet. <br>
                However scaling for the PC version handles small width devices to a degree.
            </h3>
        </div>
    </header>
    <article>
        <div class="container">
            <div class="articleDiv-outerLayer">
                <div class="articleDiv-middleLayer">
                    <div class="articleDiv-innerLayer">
                        <div class="col-md-12">
                            <!-- Top Slideshow -->
                            <div class="topOfPageContent" id="topOfPageContent">
                                <section class="topSlider">
                                    <!-- Bootstrap Carousel -->
                                    <div class="carousel-header"><h2>Royalties</h2></div>
                                    <partial name="_CarouselOne" />
                                </section>
                            </div>
                            <!-- Blue content Page -->
                            <div class="middleOfPageContent" id="middle1">
                                <div class="middle1-1">
                                    <h2>The House Museum</h2>
                                    <p>
                                        In piazza delle Erbe, in Verona, an eclectic path between masterpieces and curiosities that go through more than five centuries.
                                        A Wunderkammer with thematic nuclei of ancient art in which the dialogue with modernity and the charm of a private dwelling breaks out.
                                    </p>
                                </div>
                                <div class="middle1-2">
                                    <img src="~/images/skyfall_omega.jpg" />
                                </div>
                            </div>
                            <!-- Orange content page with button slideshow -->
                            <div class="middleOfPageContent" id="middle2">
                                <div class="middle2-1">
                                    <h2>Masterpieces</h2>
                                    <p>
                                        A focus on Veronese painting. The passion for Italian Futurism and metaphysics.
                                        Authentic masterpieces of modern and contemporary art, great masters of the twentieth century.
                                        Over 600 works in dialogue between the arts. Discover the treasures of the Luigi Carlon Collection.
                                    </p>
                                </div>
                                <partial name="_CarouselTwo" />
                            </div>
                            <!-- Blue content page -->
                            <div class="middleOfPageContent" id="middle3">
                                <div class="middle3-1">
                                    <h2>The Collector</h2>
                                    <p>
                                        “The works I have collected are tales of life,
                                        gestures of love,
                                        testimonies of the unique and singular sensibility of the artists met over the years.”
                                        Luigi Carlon
                                    </p>
                                </div>
                                <div class="middle3-2">
                                    <img src="~/images/spectre_am_007.jpg" />
                                </div>
                            </div>
                            <!-- Visit and Family Activities -->
                            <div class="middleOfPageContent" id="middle4">
                                <div class="middle4-1">
                                    <div class="middle4-1-1">
                                        <h2> Visits </h2>
                                    </div>
                                    <div class="middle4-1-2">
                                        <img src="~/images/skyfall_omega.jpg" />
                                    </div>
                                    <div class="middle4-1-3">
                                        <p>
                                            Beyond the gate of Palazzo Maffei, a new adventure of art begins. A chest is opened, the great passion is told.
                                        </p>
                                    </div>
                                </div>
                                <div class="middle4-2">
                                    <div class="middle4-2-1">
                                        <h2> Activites </h2>
                                    </div>
                                    <div class="middle4-2-2">
                                        <img src="~/images/skyfall_omega.jpg" />
                                    </div>
                                    <div class="middle4-2-3">
                                        <p>
                                            Palazzo Maffei House Museum offers numerous activities for families, such as thematic guided tours of the Collection for adults and children.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>

    <!-- Bootstrap Scripts -->
